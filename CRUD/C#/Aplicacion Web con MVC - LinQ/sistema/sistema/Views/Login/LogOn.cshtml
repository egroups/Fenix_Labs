<body>

    <div class="login">
    
    @using (Html.BeginForm("Start", "Login", FormMethod.Post, new {})) {

    <p>
      <label for="username">Usuario :</label>
      <input data-val-required="El campo Nombre de usuario es obligatorio." id="UserName" name="UserName" value="" type="text">
    </p>
     
    <p>
      <label for="password">Password :</label>
      <input data-valmsg-for="Password" data-valmsg-replace="true" name="Password" type="password">
    </p>
    <br />
    <p class="login-submit">
      <button type="submit" name="login" class="login-button">Login</button>
    </p>
    }
    <br /><br />
    </div>
  
</body></html>

@{
    if (ViewBag.estado != null)
    {
        string mensaje = ViewBag.mensaje;
        if (mensaje != "")
        {
            <script>alert("@mensaje");</script>;
        }
    }
}