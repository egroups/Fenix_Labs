@model List<Personal.Models.Empleado>

@{
    ViewBag.Title = "Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";    
}

@if (Model.Count == 0)
    {
        <center><b>No se encontraron empleados</b></center>
    }
    else
    {
        <div class="panel contenedor panel-default">
            <div class="panel-heading">Empleados encontrados : @Model.Count</div>
            <div class="panel-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="fila_empleado">Nombre</th>
                            <th class="fila_empleado">Teléfono</th>
                            <th class="fila_empleado">Dirección</th>
                            <th class="fila_empleado">Sexo</th>
                            <th class="fila_empleado">Profesión</th>
                            <th class="fila_empleado">Opción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var empleado in Model)
                        {
                            <tr>
                                <td class="filterable-cell fila_empleado">@empleado.nombre</td>
                                <td class="filterable-cell fila_empleado">@empleado.telefono</td>
                                <td class="filterable-cell fila_empleado">@empleado.direccion</td>
                                <td class="filterable-cell fila_empleado">@empleado.sexo</td>
                                <td class="filterable-cell fila_empleado">@empleado.profesion.nombre</td>
                                <td class="filterable-cell fila_empleado">
                                    <a href="/Empleados/Editar/@empleado.id">
                                        <img data-toggle="tooltip" src="@Url.Content("~/Content/images/edit.png")" title="Editar"/>
                                    </a>
                                    <a href="Empleados/Borrar/@empleado.id">
                                        <img data-toggle="tooltip" src="@Url.Content("~/Content/images/delete.png")" title="Borrar"/>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
}

<div class="col-md-4 col-md-offset-4">
    <a href="@Url.Action("Agregar", "Empleados")" class="btn btn-primary btn-block" role="button">Agregar</a>
</div>
    
@{
    if(ViewBag.mensaje != null) {
        @Html.Raw(ViewBag.mensaje);
    }

}