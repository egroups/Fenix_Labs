@model Personal.Models.Empleado

@{
    ViewBag.Title = "Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    @using (Html.BeginForm("Borrar", "Empleados", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <div class="col-md-4 col-md-offset-4">
                @Html.HiddenFor( model => model.id)
                <h1 class="text-center">Eliminacíon</h1>
                <p class="text-center">¿Estás seguro que deseas eliminar al empleado @Model.nombre ?</p>
                <div class="col-xs-6 text-left">
                    <button type="submit" name="borrar_empleado" class="btn btn-danger btn-block">Borrar</button>
                </div>
                <div class="col-xs-6 text-right">
                    <a class="btn btn-primary btn-block" href="@Url.Action("Index", "Empleados")">Volver</a>
                </div>
            </div>
        </fieldset>
        }
</div>
