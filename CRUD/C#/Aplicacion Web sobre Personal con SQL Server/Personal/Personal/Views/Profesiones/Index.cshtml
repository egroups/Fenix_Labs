@model List<Personal.Models.Profesion>

@{
    ViewBag.Title = "Profesiones";
    Layout = "~/Views/Shared/_Layout.cshtml";    
}

@if (Model.Count == 0)
    {
        <center><b>No se encontraron profesiones</b></center>
    }
    else
    {
        <div class="panel contenedor panel-default">
            <div class="panel-heading">Profesiones encontradas : @Model.Count</div>
            <div class="panel-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th class="fila_profesion">Nombre</th>
                            <th class="fila_profesion">Opción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var profesion in Model)
                        {
                            <tr>
                                <td class="filterable-cell fila_profesion">@profesion.nombre</td>
                                <td class="filterable-cell fila_profesion">
                                    <a href="/Profesiones/Editar/@profesion.id">
                                        <img data-toggle="tooltip" src="@Url.Content("~/Content/images/edit.png")" title="Editar"/>
                                    </a>
                                    <a href="Profesiones/Borrar/@profesion.id">
                                        <img data-toggle="tooltip" src="@Url.Content("~/Content/images/delete.png")" title="Borrar"/>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
}

<div class="col-md-4 col-md-offset-4">
    <a href="@Url.Action("Agregar", "Profesiones")" class="btn btn-primary btn-block" role="button">Agregar</a>
</div>
    
@{
    if(ViewBag.mensaje != null) {
        @Html.Raw(ViewBag.mensaje);
    }

}