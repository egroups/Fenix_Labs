<!DOCTYPE html>
<html lang="en">
    <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{% endblock %}</title> 
    <!-- Bootstrap -->
    {% block stylesheets %}
        <link href="{{ asset('public/bootstrap/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('public/css/style.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('public/dist/sweetalert.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
    {% block javascripts %}
        <script src="{{ asset('public/js/jquery-3.2.1.js') }}" type="text/javascript"></script>
        <script src="{{ asset('public/js/validator.js') }}" type="text/javascript"></script>   
        <script src="{{ asset('public/dist/sweetalert-dev.js') }}" type="text/javascript"></script>
        <script src="{{ asset('public/chart/js/highcharts.js') }}"></script>
        <script src="{{ asset('public/chart/js/modules/exporting.js') }}"></script>
        <script src="{{ asset('public/js/app.js') }}" type="text/javascript"></script>
    {% endblock %}
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
