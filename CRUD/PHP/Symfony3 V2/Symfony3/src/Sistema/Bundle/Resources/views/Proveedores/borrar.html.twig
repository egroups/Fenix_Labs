{% extends '::layout_admin.html.twig' %}

{% block title %}
	Proveedores
{% endblock %}

{% block body %}

	<div class="jumbotron">
	  {{ form_start(form, {'action': path('sistema_borrar_proveedor'), 'method': 'POST',attr: {class: 'form-horizontal',role:'form'}}) }}
	  	  <fieldset>
			  <div class="col-md-4 col-md-offset-4">
			  	  {{ form_widget(form.id) }}
				  <h1 class="text-center">Eliminacíon</h1>
				  <p class="text-center">¿Estás seguro que deseas eliminar al proveedor {{ proveedor.nombre }}?</p>
				  <div class="col-xs-6 text-left">
				  	{{ form_widget(form.borrarProveedor) }}
				  </div>
				  <div class="col-xs-6 text-right">
				  	{{ form_widget(form.volverLista) }}
				  </div>
			  </div>
		  </fieldset>
	  {{ form_end(form) }} 
	</div>

	{% for mensaje in app.session.flashBag.get('mensaje') %}
	  {{ mensaje|raw }}
	{% endfor %}

{% endblock %}