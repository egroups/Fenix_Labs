{% extends '::layout_login.html.twig' %}

{% block title %}
	Login
{% endblock %}

{% block body %}

<div class="panel login panel-default">
	<div class="panel-heading">Login</div>
		<div class="panel-body">
        {{ form_start(form, {'action': path('sistema_login'), 'method': 'POST',attr: {class: 'form-horizontal','data-toggle':'validator',role:'form'}}) }}
          <fieldset>
            <legend>Datos</legend>
            <div class="form-group has-feedback" name="form-group-usuario">
              <label for="inputTexto1" class="col-lg-2 control-label">Usuario</label>
              <div class="col-lg-10">
                {{ form_widget(form.usuario) }}
              </div>
              <div class="text-center help-block with-errors"></div>
            </div>
            <div class="form-group has-feedback" name="form-group-clave">
              <label for="inputTexto2" class="col-lg-2 control-label">Clave</label>
              <div class="col-lg-10">
                {{ form_widget(form.clave) }}
              </div>
              <div class="text-center help-block with-errors"></div>
            </div>
            <div class="form-group">
              <div class="col-md-4 col-md-offset-4">
                {{ form_widget(form.ingresar) }}
              </div>
            </div>
          </fieldset>
        {{ form_end(form) }}
	</div>
</div>

{% for mensaje in app.session.flashBag.get('mensaje') %}
  {{ mensaje|raw }}
{% endfor %}

{% endblock %}